<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.padcmyanmar.hello_android_padc.HelloAndroidActivity"
    tools:showIn="@layout/activity_hello_android"

    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello Android! My name is PADC Myanmar."
        android:textSize="20sp"
        android:textColor="#FF0000"
        android:layout_centerInParent="true"
        android:id="@+id/tv_hello"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_click_me"
        android:text="@string/lbl_click_me"
        android:textAllCaps="false"
        android:layout_alignParentBottom="true"

        />
    <TextView
        android:textColor="#000000"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_user_click_timestamp"
        android:text="You clicked at {Timestamp}."
        android:layout_below="@+id/tv_hello"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"

        />


</RelativeLayout>
